{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",         // This will output to the `dist` folder
    "rootDir": "./",            // The root directory of your project
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "app.ts",                   // Include the app.ts if it is outside the src folder
    "other-file.ts"             // Include any other TypeScript files
  ],
  "exclude": [
    "node_modules"
  ]
}
